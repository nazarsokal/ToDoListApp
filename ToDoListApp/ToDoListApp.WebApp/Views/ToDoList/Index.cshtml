@{
    Layout = null;
    var todoLists = ViewBag.ToDoLists as List<ToDoListApp.WebApp.Models.ToDoListSummarytDto>;
}

<!DOCTYPE html>
<html lang="us">
<head>
    <title>ToDo Lists</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f6f8;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 900px;
            margin: 40px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 32px 40px 40px 40px;
        }
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 32px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 24px;
        }
        th, td {
            padding: 14px 12px;
            text-align: left;
        }
        th {
            background: #f0f2f5;
            color: #444;
            font-weight: 600;
        }
        tr {
            border-bottom: 1px solid #e0e0e0;
        }
        tr:last-child {
            border-bottom: none;
        }
        td {
            color: #555;
        }
        .actions button {
            margin-right: 8px;
            padding: 7px 18px;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
            transition: background 0.2s;
        }
        .actions .view {
            background: #1976d2;
            color: #fff;
        }
        .actions .edit {
            background: #ffa726;
            color: #fff;
        }
        .actions .delete {
            background: #e53935;
            color: #fff;
        }
        .actions button:hover {
            opacity: 0.85;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Your ToDo Lists</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (todoLists != null && todoLists.Count > 0)
        {
            foreach (var todo in todoLists)
            {
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.Description</td>
                    <td class="actions">
                        <form method="get" asp-action="GetTaskById" asp-route-id="@todo.ToDoListId" style="display:inline;">
                            <button type="submit" class="view">View</button>
                        </form>
                        <form method="get" asp-action="Edit" asp-route-id="@todo.ToDoListId" style="display:inline;">
                            <button type="submit" class="edit">Edit</button>
                        </form>
                        <form method="post" asp-action="Delete" asp-route-id="@todo.ToDoListId" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this ToDo List?');">
                            <button type="submit" class="delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" style="text-align:center; color:#888;">No ToDo Lists found.</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>